<!DOCTYPE html>
<html>
<head>
  <title>ApiHunter</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <link href="/bootstrap/css/bootstrap.min.css" media="screen" rel="stylesheet" type="text/css" />
  <link href="/bootstrap/css/bootstrap-theme.min.css" media="screen" rel="stylesheet" type="text/css" />
  <link href="/font-awesome/css/font-awesome.min.css" media="screen" rel="stylesheet" type="text/css" />
  <link href='http://fonts.googleapis.com/css?family=Condiment|Source+Code+Pro:400,600|Special+Elite' rel='stylesheet' type='text/css'>
  <link href="/layout.css" media="screen" rel="stylesheet" type="text/css" />
  <link href="/csshake.min.css" media="screen" rel="stylesheet" type="text/css" />
  <%= csrf_meta_tags %>
  <%= yield :css %>
</head>
<body>
  <div class="container">
    <h1 class="text_3d center" style="font-size:80px;margin:40px 0 30px 0;"><a href="/" style="color:#fff;text-decoration:none;">API Hunter</a><%= " : #{@title}" if @title %></h1>
    <% if current_user %>
      <span style="position:absolute;right:20px;top:20px;text-align:center;display:block;border:1px #ccc solid;border-radius:6px;padding:4px;">
        Hi <%= current_user.name %> ! <br/>
        <span style="font-size:30px;color:#009900;"><%= Score.user_score(current_user) %>%</span><br/>
        <%= link_to 'Edit profile' , profile_index_path , class:'btn btn-success btn-xs' %>
        <%= link_to 'Logout' , destroy_user_session_path , data:{method:'delete'} , class:'btn btn-warning btn-xs' %>
      </span>
    <% end %>

    
<%= yield %>

  </div>

  <%= javascript_include_tag 'application' %>
  <script src="/bootstrap/js/bootstrap.min.js"></script>
  <%= yield :js %>
</body>
</html>
